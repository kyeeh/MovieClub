<h1>Your Favorite Movies</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Release Date</th>
      <th>Genre</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.img_url %></td>
        <td><%= movie.title %></td>
        <td><%= movie.release_date %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.duration %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create a Movie', new_movie_path %> or 
<%= link_to 'Add a Movie by title search', search_movies_path %>